{
  "version": 2,
  "name": "deal-protocol",
  "framework": null,
  "installCommand": "npm install --only=production",
  "buildCommand": "echo 'Sovereign Build Approved'",
  "outputDirectory": ".",
  "public": true,
  "rewrites": [
    { "source": "/api/(.*)", "dest": "https://deal-protocol.onrender.com/api/$1" },
    { "source": "/(.*)", "dest": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Permissions-Policy", "value": "interest-cohort=()" }
      ]
    }
  ]
}